<Window x:Class="WpfApplication.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfApplication.ViewModels"
        xmlns:ev="clr-namespace:WpfApplication.EVENT"
        Title="テスト" Height="458" Width="559"
        Icon="/WpfApplication;component/Resources/favicon.ico"
        Style="{StaticResource wnd-metro}">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="NEWS">
                <Grid>
                    <DataGrid Name="DataGrid2" Margin="10,8,10,10" ItemsSource="{Binding News }" IsReadOnly="True" SelectionChanged="DataGrid_SelectionChanged">
                    </DataGrid>
                    <Button Content="update" FontSize="13" Margin="451,4,13,354" Click="Button_Click" />
                </Grid>
            </TabItem>
            <TabItem Header="Weather ">
                <Grid>
                    <DataGrid Name="DataGrid1" Margin="10" ItemsSource="{Binding Path=Weahter }" IsReadOnly="True">
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
